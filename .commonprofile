. $HOME/.commonfuncs

if checkPath fortune; then
    if [ -d /opt/local/share/games/fortune/comedy -e -d /usr/share/games/fortune/comedy ]; then
        FORTUNE=`fortune comedy`
    else
        FORTUNE=`fortune`
    fi
    echo -e "\n$FORTUNE\n"
fi

# update the confs so they are in synce
if checkPath svn && [ -d $HOME/.dotfiles/.svn ]; then
    UPCONFS=`svn up $HOME/.dotfiles`
    echo -e "\ndotfiles updated:\n$UPCONFS\n"
fi
