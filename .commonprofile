source $HOME/.commonfuncs

if checkPath fortune; then
    if [ -d /opt/local/share/games/fortune/comedy ] || [ -d /usr/share/games/fortune/comedy ]; then
        FORTUNE=$(fortune comedy)
    else
        FORTUNE=$(fortune)
    fi
    echo -e "\n$FORTUNE\n"
fi

# only update once a day, according to the weShouldUpdate function
if weShouldUpdate; then
  # update the confs so they are in sync, but only if under
  # subversion control
  if checkPath svn && [ -d $HOME/.dotfiles/.svn ]; then
      svn up $HOME/.dotfiles
  fi
fi
